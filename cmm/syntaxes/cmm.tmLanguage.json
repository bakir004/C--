{
  "name": "CMM",
  "scopeName": "source.cmm",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#keywords" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#brackets" },
    { "include": "#punctuation" },
    { "include": "#identifier" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.cmm",
          "match": "#[^\\n]*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.cmm",
          "begin": "\"",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.string.begin.cmm" }
          },
          "end": "\"",
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.cmm" }
          },
          "patterns": [
            { "name": "constant.character.escape.cmm", "match": "\\\\." }
          ]
        },
        {
          "name": "string.quoted.single.cmm",
          "begin": "'",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.string.begin.cmm" }
          },
          "end": "'",
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.cmm" }
          },
          "patterns": [
            { "name": "constant.character.escape.cmm", "match": "\\\\." }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.cmm",
          "match": "\\b[0-9]+(?:\\.[0-9]+)?\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.cmm",
          "match": "====|!====|===|!===|!==|==|!=|>=|<=|>|<|="
        },
        {
          "name": "keyword.operator.assignment.cmm",
          "match": "="
        },
        {
          "name": "keyword.operator.arithmetic.cmm",
          "match": "\\+|-|\\*|/|%"
        },
        {
          "name": "keyword.operator.logical.cmm",
          "match": "\\band\\b|\\bor\\b"
        },
        {
          "name": "keyword.operator.other.cmm",
          "match": ":"
        }
      ]
    },
    "brackets": {
      "patterns": [
        { "name": "punctuation.section.paren.begin.cmm", "match": "\\(" },
        { "name": "punctuation.section.paren.end.cmm", "match": "\\)" },
        { "name": "punctuation.section.bracket.begin.cmm", "match": "\\[" },
        { "name": "punctuation.section.bracket.end.cmm", "match": "\\]" },
        { "name": "punctuation.section.block.begin.cmm", "match": "\\{" },
        { "name": "punctuation.section.block.end.cmm", "match": "\\}" }
      ]
    },
    "punctuation": {
      "patterns": [{ "name": "punctuation.separator.comma.cmm", "match": "," }]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.cmm",
          "match": "\\b(if|else|while|for|return|fn|in|delete|sizeof|maybe)\\b"
        },
        {
          "name": "storage.type.cmm",
          "match": "\\b(naprimjer|fn)\\b"
        },
        {
          "name": "constant.language.boolean.cmm",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "identifier": {
      "patterns": [
        {
          "name": "variable.other.cmm",
          "match": "\\b[a-zA-Z_][a-zA-Z_0-9]*\\b"
        }
      ]
    }
  },
  "scope": "source.cmm"
}
